# Production .env Example - Laravel
# Türkçe: Production ortamı için örnek .env dosyası

APP_NAME=CVBlog
APP_ENV=production
APP_KEY=base64:PRODUCTION_KEYINIZI_BURAYA_YAZIN
APP_DEBUG=false
APP_URL=https://example.com

LOG_CHANNEL=stack
LOG_LEVEL=info

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cvblog_prod
DB_USERNAME=cvblog_user
DB_PASSWORD=GUVENLI_SIFRE

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_SECURE_COOKIE=true

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=REDIS_SIFRE
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=MAIL_KULLANICI
MAIL_PASSWORD=MAIL_SIFRE
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="CVBlog"

# Güvenlik: .env dosyasını asla public erişime açmayın!
# Türkçe: Bu dosya production ortamı için örnek değişkenleri içerir. 